
programa Ejercicio4
procesos
  proceso tomarUnaFlor(ES flores : numero; ES seguir : boolean)
  comenzar
    si(HayFlorEnLaEsquina)
      tomarFlor
      flores := flores + 1
    sino
      seguir := F
  fin
  
  proceso recolectarFlores
  comenzar
    Pos(11,11)
    mientras(HayFlorEnLaEsquina)
      tomarFlor
  fin
  
  proceso dejarFlor
  comenzar
    si(HayFlorEnLaBolsa)
      depositarFlor
  fin
  
  proceso informarUltimo
  variables
    id : numero
  comenzar
    repetir 4
      RecibirMensaje(id, *)
    Informar('el ultimo fue r', id)
  fin
  
  
  proceso asignarIds
  comenzar
    EnviarMensaje(1, r1)
    EnviarMensaje(2, r2)
    EnviarMensaje(3, r3)
    EnviarMensaje(4, r4)            
  fin
  
areas
  areaEsq1 : AreaP (10,10,10,10)
  areaEsq2 : AreaC (11,11,11,11)

  areaIni1 : AreaP(9,9,9,9)
  areaIni2 : AreaP(9,10,9,10)
  areaIni3 : AreaP(9,11,9,11)
  areaIni4 : AreaP(9,12,9,12)     
  
  areaCoord : AreaP(1,1,1,1)      
   
robots
  robot robotin
  variables
    flores : numero
    aveIni : numero
    calIni : numero
    id : numero
    seguir : boolean
  comenzar
    RecibirMensaje(id, rCoord)
    aveIni := PosAv
    calIni := PosCa
    flores := 0
    seguir := V
    mientras(seguir)
      BloquearEsquina(10,10)
      Pos(10,10)
      tomarUnaFlor(flores, seguir)      
      BloquearEsquina(11,11) 
      Pos(11,11)     
      LiberarEsquina(10,10)
      dejarFlor
      Pos(aveIni, calIni)
      LiberarEsquina(11,11)
    EnviarMensaje(id, rCoord)        
  fin
 
  robot coordinador
  comenzar
    asignarIds
    informarUltimo
    recolectarFlores
  fin
    

variables
  r1, r2, r3, r4 : robotin
  rCoord : coordinador
  
comenzar
  AsignarArea(r1, areaIni1)
  AsignarArea(r2, areaIni2)
  AsignarArea(r3, areaIni3)
  AsignarArea(r4, areaIni4)    
  
  AsignarArea(r1, areaEsq1)
  AsignarArea(r2, areaEsq1)
  AsignarArea(r3, areaEsq1)
  AsignarArea(r4, areaEsq1)
  
  AsignarArea(r1, areaEsq2)
  AsignarArea(r2, areaEsq2)
  AsignarArea(r3, areaEsq2)
  AsignarArea(r4, areaEsq2)   
  
  AsignarArea(rCoord, areaCoord)
  AsignarArea(rCoord, areaEsq2)
  
  Iniciar(r1, 9,9)
  Iniciar(r2, 9,10)        
  Iniciar(r3, 9, 11)        
  Iniciar(r4, 9,12)  
  Iniciar(rCoord, 1,1)            
fin
