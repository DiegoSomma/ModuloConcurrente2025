programa ejercicio3

procesos
  proceso juntarPapeles (ES papeles : numero)
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
      papeles := papeles + 1
  fin
  
  proceso juntarFlores (ES flores : numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      flores := flores + 1
  fin  
  
  proceso recorrerEsquinasPapeles(ES papeles : numero)
  comenzar
    repetir 9
      juntarPapeles(papeles)
      mover
    juntarPapeles(papeles)
  fin
  
  proceso recorrerEsquinasFlores(ES Flores : numero)
  comenzar
    repetir 9
      juntarFlores(Flores)
      mover
    juntarFlores(Flores)
  fin
  
  
  
areas
  areaA1 : AreaP (1,1,10,1)
  areaA2 : AreaP (11,1,20,1)  
  areaB1 : AreaP (1,2,10,2)
  areaB2 : AreaP (11,2,20,2)    
 
 
robots
  robot robotA1
  variables
    cantPapeles : numero
  comenzar
    cantPapeles := 0
    derecha
    recorrerEsquinasPapeles(cantPapeles)
    EnviarMensaje(cantPapeles,rA2) 
  fin 
  
  robot robotA2
  variables
    cantPapeles : numero
  comenzar
    RecibirMensaje(cantPapeles, rA1)
    derecha
    recorrerEsquinasPapeles(cantPapeles)
    Informar('totalPapeles_A',cantPapeles)
  fin
  
  robot robotB1
  variables
    cantFlores : numero
  comenzar
    cantFlores := 0
    derecha
    recorrerEsquinasFlores(cantFlores)
    EnviarMensaje(cantFlores,rB2) 
  fin 
  
  robot robotB2
  variables
    cantFlores : numero
  comenzar
    RecibirMensaje(cantFlores, rB1)
    derecha
    recorrerEsquinasFlores(cantFlores)
    Informar('totalFlores_B',cantFlores)
  fin  
  
  
  
  
variables
  rA1 : robotA1
  rA2 : robotA2
  rB1 : robotB1
  rB2 : robotB2
  
comenzar
  AsignarArea(rA1, areaA1)
  AsignarArea(rA2, areaA2)
  AsignarArea(rB1, areaB1)
  AsignarArea(rB2, areaB2)    
  Iniciar(rA1,1,1)
  Iniciar(rA2,11,1)
  Iniciar(rB1,1,2)
  Iniciar(rB2,11,2)  
  
fin  
  
  
     
 
